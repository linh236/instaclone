<%= turbo_stream.prepend "posts" do %>
  <%= render partial: "post", locals: {post: @post}%>
<% end %>

<%= turbo_stream.update "post-form" do %>
  <%= render "posts/form"%>
<% end %>

<%= turbo_stream.append "flash", partial: "shared/flash", locals: { msg_type: :notice, message: "Created a new post!" } %>
