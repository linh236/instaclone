<%= turbo_stream.update "post-likes-count-#{@likeable.id}" do %>
  <%= pluralize(@likeable.likes.count, "like") %>
<% end %>

<%= turbo_stream.update "post-likes-#{@likeable.id}" do %>
  <%= button_to "", likes_path, params: {likeable_type: "Post", likeable_id: @likeable.id}, class:"post-actions-like"%>
<% end %>

<%= turbo_stream.update "like-#{@likeable.id}" do %>
  <%= link_to "Like", likes_path(likeable_type: "Comment", likeable_id: @likeable.id), data: {turbo_method: :post}, class: 'like'%>
<% end %>